
<%- include("partials/sections/header"); -%>
    
<main class="form-signin w-25 m-auto">
    <form id="loginForm" method="post" action="/log-in">
      <img class="mb-4" src="/public/images/Logo-Header.png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Log in</h1>
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com" required>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
      </div>
      <button class="w-25 btn btn-lg btn-primary" type="submit">Log in</button>
    </form>
  </main>

<%- include("partials/sections/footer"); -%>
